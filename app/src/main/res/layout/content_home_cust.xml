<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home_cust"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.milkiminz.raddilo.HomeCust"
    tools:showIn="@layout/app_bar_home_cust">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Select The Items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:id="@+id/textView3"
                android:textSize="36sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="49dp"
                android:id="@+id/s1"
                android:text="Newspapers/Papers:     "
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true" />

            <Switch
                android:text="Metal                                 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:id="@+id/s2" />

            <Switch
                android:text="Glass                                 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:id="@+id/s3" />

            <Switch
                android:text="Plastic                               "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:id="@+id/s4"
                android:layout_below="@+id/s3"
                android:layout_centerHorizontal="true" />

            <Switch
                android:text="Others                               "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:id="@+id/s5" />

            <TextView
                android:text="Select Shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="52dp"
                android:id="@+id/textView5"
                android:textSize="36sp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="22dp"
                android:id="@+id/spinnershop" />

            <TextView
                android:text="Approx weight:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textSize="20sp"


                android:layout_below="@+id/spinnershop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:text="SELL NOW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aw"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:id="@+id/sellnow"
                android:onClick="sellnow" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/aw"
                android:hint="In KG"
                android:layout_alignTop="@+id/textView6"
                android:layout_alignLeft="@+id/sellnow"
                android:layout_alignStart="@+id/sellnow"
                android:layout_marginLeft="41dp"
                android:layout_marginStart="41dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
